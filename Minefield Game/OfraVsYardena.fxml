            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        </columnConstraints>
        <rowConstraints>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <Button fx:id="araziBtn" contentDisplay="CENTER" mnemonicParsing="false" onAction="#decYardenaAction" prefHeight="34.0" prefWidth="210.0" text="Yardena Arazi" textAlignment="CENTER" textFill="RED" textOverrun="CENTER_ELLIPSIS">
               <font>
                  <Font name="Arial" size="18.0" />
               </font>
