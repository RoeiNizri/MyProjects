            <Button fx:id="hazaBtn" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#incOfraAction" prefHeight="34.0" prefWidth="170.0" text="Ofra Haza" textFill="GREEN" textOverrun="CENTER_ELLIPSIS" GridPane.columnIndex="2">
               <font>
                  <Font name="Arial" size="18.0" />
               </font>
